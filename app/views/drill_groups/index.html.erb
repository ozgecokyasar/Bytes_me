<div class="index drill_groups">
  <div class="drill_groups_contents">
    <h2>< Add New Drill Group /> </h2>
    <%= link_to("Add New Drill Group", new_drill_group_path, :class => "waves-effect waves-light btn") %>
    <table class="listing">
      <tr class="header">
        <th>No.</th>
        <th>Drill Group Name</th>
        <th>Difficulty</th>
      </tr>
      <% counter = 0
      @drill_groups.each do |drill_group| %>

        <tr>
          <td><%= counter += 1 %></td>
          <td><%= link_to(drill_group.drill_group_name,  drill_group_path(drill_group)) %></td>
          <td><%= drill_group.difficulty %></td>
          <td>
            <div class = 'butonIndex'>
              <%= link_to("Edit", edit_drill_group_path(drill_group), :class => "waves-effect waves-light btn") %>
              <%= link_to("Delete", delete_drill_group_path(drill_group), :class => "waves-effect waves-light btn btn1") %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

</div>
