<h1>Sign In</h1>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log In to Amazon" %>
<% end %>

<span>Forgot password?</span>
<span><%= link_to 'Don\'t have an account? Sign up', new_user_path %></span>
